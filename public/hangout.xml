<script src=//www.hackify.org/socket.io/socket.io.js"></script>
<script src=//www.hackify.org/bower_components/jquery/jquery.min.js"></script>
<script src=//www.hackify.org/bower_components/bootstrap-css/js/bootstrap.min.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/lib/codemirror.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/addon/edit/matchbrackets.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/htmlmixed/htmlmixed.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/xml/xml.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/javascript/javascript.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/css/css.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/clike/clike.js"></script>
<script src=//www.hackify.org/bower_components/codemirror/mode/php/php.js"></script>
<script src=//www.hackify.org/bower_components/angular/angular.min.js"></script>
<!-- <script src=//www.hackify.org/bower_components/angular-ui.github.com/angular-ui/build/angular-ui.js"></script> -->
<script src=//www.hackify.org/lib/angular-ui-codemirror/ui-codemirror.js"></script>
<script src=//www.hackify.org/bower_components/angular-socket-io/socket.js"></script>
<!-- <script src=//www.hackify.org/lib/bootstrap-custom/ui-bootstrap-custom-0.4.0.js"></script>
<script src=//www.hackify.org/lib/bootstrap-custom/ui-bootstrap-custom-tpls-0.4.0.js"></script> -->
<script src=//www.hackify.org/lib/bootstrap-custom/ui-bootstrap-tpls-0.5.0.js"></script>


<script>
    var roomName = 'demo';
</script>
<script src=//www.hackify.org/js/serverState.js"></script>

<script src=//www.hackify.org/js/app.js"></script>
<script src=//www.hackify.org/js/services.js"></script>
<script src=//www.hackify.org/js/controllers.js"></script>
<script src=//www.hackify.org/js/filters.js"></script>
<script src=//www.hackify.org/js/directives.js"></script>
<script src="//plus.google.com/hangouts/_/api/v1/hangout.js"></script>
</body>
</html>

]]>
</Content>
</Module>
